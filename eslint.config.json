{ // ref http://eslint.org/docs/rules/
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "es6": true
  },
  "rules": {
    "strict": 0,
    "quotes": 0,
    "not-trailing-spaces": 0,
    "eol-last": 0,
    "no-unused-vars": 0,
    "no-underscore-dangle": 0,
    "no-alert": 0,
    "no-lone-blocks": 0,
    "no-dupe-args": 0, // disallow duplicate arguments in function definitions
    "no-dupe-keys": 0, // disallow duplicate keys in object literals
    "no-extra-parens": 0,
    "no-irregular-whitespace": 0,
    "no-sparse-arrays": 0,
    "no-unreachable": 0,
    "use-isnan": 0,
    "valid-jsdoc": 0,
    "camelCase": 0,
    "no-multiple-empty-lines": 1,
    "space-before-blocks": 0,
    "space-before-function-paren": 0,
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "jQuery": true,
    "$": true
  }
}